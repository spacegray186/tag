# ← 주석 기호
# src/main/resources/application.properties 

# Spring Boot는 WAS(Tomcat)이 내장되어 있음 (기본 Port번호 8080)
# 톰캣 서버의 Http port번호 변경 → 안그러면 이클립스 톰캣과 오류 발생
server.port=9095

# View단 주의사항 : JSP, Thymeleaf, Mustache는 공동으로 사용할 수 없음
#              → JSP 사용시 pom.xml에 의존성 추가해둬야함(jasper)

# 접두어(prefix), 접미사(suffix) 등록
spring.mvc.view.prefix=/WEB-INF/views/
spring.mvc.view.suffix=.jsp

# JSP페이지가 수정이 되면 서버 자동 재시작 
server.servlet.jsp.init-parameters.development=true

# 파일 업로드시 용량 제한 설정
spring.servlet.multipart.max-file-size=500MB
spring.servlet.multipart.max-request-size=500MB

# 오라클 DB 환경설정
spring.datasource.driver-class-name=oracle.jdbc.driver.OracleDriver
spring.datasource.url=jdbc:oracle:thin:@localhost:1521/xe
spring.datasource.username=system
spring.datasource.password=1234


